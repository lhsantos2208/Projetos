<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="App1.MainPage">

    <StackLayout>
        <Label Text="Olá, mundo!" TextColor="Black" FontSize="24" HorizontalOptions="Center" />
        <Entry x:Name="txtNome" Keyboard="Text" ReturnType="Default"/>
        <Button Text="Olá" Clicked="Button_Clicked"/>
        <Button x:Name="btnImagem" Clicked="btnImagem_Clicked" Text="Imagem"
            BackgroundColor="Transparent" BorderColor="Black" BorderWidth="1" CornerRadius="20" HorizontalOptions="CenterAndExpand"/>
        <Button x:Name="btnTexti" Clicked="btnTexti_Clicked" Text="Texto"
            BackgroundColor="Transparent" BorderColor="Black" BorderWidth="1" CornerRadius="20" HorizontalOptions="CenterAndExpand"/>
        <ImageButton Source="SetaDireita.png" WidthRequest="100" HeightRequest="100" BackgroundColor="LightGray" CornerRadius="20" HorizontalOptions="CenterAndExpand"/>
        <Button x:Name="btnEventos" Text="Eventos" Pressed="btnEventos_Pressed" Released="btnEventos_Released"
                BackgroundColor="Transparent" BorderColor="Black" BorderWidth="1" CornerRadius="20" HorizontalOptions="CenterAndExpand"/>
        <Label x:Name="lblEventos" Text="-" TextColor="Black" FontSize="24" HorizontalOptions="CenterAndExpand"/>
    </StackLayout>

</ContentPage>
